  "license": "Apache-2.0",
  "dependencies": {
    "@actions/artifact": "^4.0.0",
    "boxen": "^8.0.1",
    "cli-spinners": "^3.3.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "octokit": "^5.0.5",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "allure-commandline": "^2.34.1",
    "eslint": "^9.39.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.14"
  },
  "scripts": {
    "environment": "npx tsx src/cli/environment",
    "environment:manual": "npx tsx src/cli/environment-manual",
    "docker:start": "npx tsx src/cli/docker.ts start",
    "docker:stop": "npx tsx src/cli/docker.ts stop",
    "cloud:setup": "npx tsx src/cli/cloud.ts setup",
    "cloud:check": "npx tsx src/cli/cloud.ts check",
    "integration": "npx tsx src/cli/integration",
    "report": "npx tsx src/cli/report",
    "report:regenerate": "npx tsx src/cli/regenerate",
    "manual": "npx tsx src/cli/manual.ts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint:test": "eslint 'tests/**/*.ts'",
    "lint:test:fix": "eslint 'tests/**/*.ts' --fix"
